extends:
  - airbnb
  - plugin:react/recommended
  - plugin:import/errors
  - plugin:import/warnings
installedESLint: true
plugins:
  - react
env:
  jest: true
rules:
  comma-dangle:
    - 2
    - "never"
  no-trailing-spaces: 0
  react/jsx-no-bind:
    - 2
    - ignoreRefs: true
      allowArrowFunctions: false
      allowBind: false

settings:
  import/resolver: webpack
